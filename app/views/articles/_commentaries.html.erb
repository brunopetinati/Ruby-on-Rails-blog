<% # essa página se refere à antiga new.html.erb %>

<% if @articles.errors.any? %>
  <h2>The following errors prevented the article from being saved</h2>
  <ul>
    <% @articles.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with scope: :articles, url: articles_path, local: true do |f| %>
<%# provided the model name as a symble :article%  submits para articles_path, local true 
apenas é preciso porque é ajax apenas no form_with%>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<%= link_to "Return to articles list", articles_path %>
<% end %> 